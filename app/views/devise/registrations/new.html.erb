<%= render "shared/header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h2 class='form-header-text'>
      アカウントを作成
    </h2>
  </div>

  <div class="form-group">
    <div class="error_messages">
      <%= render 'shared/error_messages', model: f.object %>
    </div>

    <div class='form-text-wrap'>
      <label class="form-text" for="nickname">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", maxlength:"40", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text" for="email">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text" for="password">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password" %>
    <p class='info-text'>※6文字以上の半角英数字</p>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text" for="password-confirmation">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
    <h2 class='form-bottom-text'><br>
      「アカウント作成」のボタンを押すことにより、<br>
      <span>利用規約</span>に同意したものとみなします<br>
    </h2>
  </div>
  <div class='register-btn'>
    <%= f.submit "アカウント作成" ,class:"btn btn-outline-primary register-go-btn" %>
    <%= link_to 'もどる', "/", class:"btn btn-outline-secondary back-btn" %>
  </div>
  <p class='register-info'>本人情報の登録について</p>
</div>
<% end %>

<%= render "shared/footer"%>
